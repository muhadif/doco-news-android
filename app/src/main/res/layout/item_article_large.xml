<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_item_article_large"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_picture" />

    <TextView
        android:id="@+id/tv_title_item_article_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/title"
        android:textColor="@android:color/black"
        android:textSize="@dimen/heading_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_item_article_large" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="@+id/linearLayout">

        <ImageView
            android:id="@+id/iv_date_item_article_large"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_access_time_black_24dp" />

        <TextView
            android:layout_marginLeft="4dp"
            android:id="@+id/tv_date_item_article_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:textSize="@dimen/subtitle_2" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_description_item_article_large">

        <ImageView
            android:id="@+id/iv_author_item_article_large"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_person_black_24dp" />

        <TextView
            android:layout_marginLeft="4dp"
            android:id="@+id/tv_author_item_article_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/author"
            android:textSize="@dimen/subtitle_2" />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_description_item_article_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/description"
        android:textSize="@dimen/paragraf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_item_article_large" />



        android:textSize="@dimen/subtitle_2"
        app:layout_constraintStart_toEndOf="@+id/iv_date_item_article_large"
        app:layout_constraintTop_toTopOf="@+id/iv_date_item_article_large" />


</androidx.constraintlayout.widget.ConstraintLayout>